<div class="container p-3 my-3 bg-dark text-white">
  <p id="notice"><%= notice %></p>
  <h3>Welcome to <%= @restaurant.name %> </h3>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <p>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content %>
        <%= review.rating %>
        <%= link_to 'remove', review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></li>
     <% end %>
    </ul>
  </p>

  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-info' %>
  <%= link_to 'Back', restaurants_path, class: 'btn btn-info' %>
  <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-info' %>
</div>

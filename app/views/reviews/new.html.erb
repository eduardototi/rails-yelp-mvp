<div class="container col-4 shadow p-3 mb-5 bg-white rounded">
  <h4 class="text-center mt-5">New Review for Restaurant</h4>
  <p class="text-center"><%= @restaurant.name %></p>


  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING %>
    <%= f.submit %>
  <% end %>
</div>
